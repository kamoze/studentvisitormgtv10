<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="parent_info_form_view" model="ir.ui.view">
            <field name="name">parent.information.form</field>
            <field name="model">parent.information</field>
            <field name="arch" type="xml">
                <form string="Parent Information">
                    <sheet >
                        <group>
                            <field name="image" widget ='image' options='{"size": [90, 90]}'/>
                        </group>
                        <group>
                        <group>
                             <field name="name"/>
                             <field name="occupation"/>
                             <field name="email"/>
                             <field name="phone"/>
                        </group>
                        <group>
                            <field name="mobile"/>
                             <field name="address"/>
                            <field name="relationship"/>
                             <field name="signature" widget="signature"/>
                       </group>
                        </group>
                          <group>
                              <field name="parent_ids" widget="many2many_tags"/>
                          </group>
                    </sheet>
                </form>
            </field>
         </record>
          <record id="parent_info_tree_view" model="ir.ui.view">
            <field name="name">parent.information.tree</field>
            <field name="model">parent.information</field>
            <field name="arch" type="xml">
                <tree>
                     <field name="name"/>
                     <field name="email"/>
                     <field name="occupation"/>
                     <field name="phone"/>
                     <field name="address"/>
                  </tree>
            </field>
          </record>
          <record id="visitor_parent_view_kanban_view" model="ir.ui.view">
            <field name="name">parent.information.kanban</field>
            <field name="model">parent.information</field>
            <field name="arch" type="xml">
                <kanban class="o_hr_employee_attendance_kanban" create="false">
                    <templates>
                        <t t-name="kanban-box">

                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('parent.information', 'image', record.id.value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div id="textbox">
                                    <div class="col-xs-11" style="padding:0px">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="col-xs-19" style="padding:0px">
                                       <strong>
                                          <field name="occupation"/>
                                       </strong>
                                    </div>
                                    <div class="col-xs-11" style="padding:0px">
                                            <field name="email"/>
                                    </div>
                                    <div class="col-xs-11" style="padding:0px">
                                            <field name="relationship"/>
                                    </div>
                                     <div class="col-xs-11" style="padding:0px">
                                            <field name="parent_ids"/>
                                    </div>

                                </div>
                            </div>
                        </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_parent_information" model="ir.actions.act_window">
            <field name="name">Parent Information</field>
            <field name="res_model">parent.information</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <menuitem id="visitor_parent_menu1" name="Parent " web_icon="students,static/description/icon3.png" groups="base.group_user" sequence="1"/>
        <menuitem id="visitor_parent_menu2" name="Parent" sequence="1" parent="visitor_parent_menu1"/>
        <menuitem id="visitor_parent_menu3" action="action_parent_information" parent="visitor_parent_menu2" sequence="1"/>
    </data>
</odoo>
