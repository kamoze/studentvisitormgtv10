<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="badge_info_form_view" model="ir.ui.view">
            <field name="name">work.location.form</field>
            <field name="model">work.location</field>
            <field name="arch" type="xml">
                <form string="Work location">
                    <sheet >
                        <group>
                            <group>
                                 <field name="work_location_id"/>
                            </group>
                            <group>
                                 <field name="floor"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
         </record>
          <record id="badge_info_tree_view" model="ir.ui.view">
            <field name="name">work.location.tree</field>
            <field name="model">work.location</field>
            <field name="arch" type="xml">
                <tree>
                     <field name="work_location_id"/>
                     <field name="floor"/>
                  </tree>
            </field>
          </record>
        <record id="action_badge_configuration" model="ir.actions.act_window">
            <field name="name">Badge</field>
            <field name="res_model">work.location</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="visitor_badge_menu2" name="Configuration"  parent="visitor_contract" sequence="2"/>
        <menuitem id="visitor_badge_menu3" action="action_badge_configuration" parent="visitor_badge_menu2" sequence="1"/>
    </data>
</odoo>
