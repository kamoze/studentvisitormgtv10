<?xml version="1.0" encoding="utf-8"?>

<templates xml:space="preserve">

    <t t-name="event_barcode_template">
        <head>
        <script>
                $(document).ready(function() {
                    var input = document.getElementById("event_barcode")
                    input.focus();
                });
            </script>
        </head>
        <div class="o_event_barcode_bg">
            <div class="o_event_barcode_main mt16 mb16">
                <input class="mt32 o_focus_point" type="text" id="event_barcode" autofocus="autofocus"
                       placeholder="Waiting for barcode scan..." size="40" default_focus="1"/>
                <img class="mt16" src="/visitor_barcode/static/img/barcode.png"/>


                <h1 class="mt0">Scan Visitor Barcode</h1>

                 <br></br>
                <input class="o_pin_success_button" style="position: relative;  left: 0px; width:200px;height:50px;  backgroundcolor: black" name="button_confirm"  value="Barcode Scan" id="button_confirm" type="submit"/>

            </div>
        </div>
    </t>

    <t t-name="event_barcode_success">
        <div class="o_notification o_event_success" t-translation="off">
            <a t-if="widget.sticky" class="fa fa-times o_close" href="#"/>
            <div class="o_notification_title">
                <span class="o_icon fa fa-3x fa-thumbs-up"/>
                <t t-raw="widget.title"/>
            </div>
        </div>
    </t>


     <t t-name="VisitorKioskConfirm">
        <div class="o_hr_attendance_kiosk_mode_container">
            <div class="o_event_barcode_bg_3">
                <t >
                    <input class="o_focus_point2" type="number" id="event_parse"
                        t-att-value="widget[3]"  invisible="true" />
                     <input class="o_focus_point2" type="number" id="contractor_parse"
                        t-att-value="widget[2]"  invisible="true" />

                    <t t-if="widget[6] == 'new'">
                        <h1>Welcome <t t-esc="widget[7]"/></h1>
                    </t>
                    <t t-if="widget[6] == 'user'">
                        <h1>Welcome <t t-esc="widget[8][1]"/></h1>
                    </t>
                    <t t-if="!widget[1]">
                        <t t-if="widget[0]=='checked_in'">
                            <h2>Check Out</h2>
                            <a class="fa btn-primary o_hr_attendance_sign_in_out_icon fa-sign-out fa-sign-in"/>
                        </t>
                        <t t-if="widget[0] =='check_out'">
                            <h2>Check In</h2>
                            <a class="fa btn-primary o_hr_attendance_sign_in_out_icon fa-sign-out fa-sign-out"/>
                        </t>
                    </t>
                    <t t-if="widget[1]">
                        <t t-if="widget[0]=='check_in'">
                            <h2>Please enter your PIN to check out</h2>
                        </t>
                        <t t-if="widget[0]=='confirm'">
                            <h2>Please enter your PIN to check in</h2>
                        </t>
                        <div class="o_event_barcode_main2">
                            <div class="col-sm-8 col-sm-offset-2">
                                <div class="row" >
                                    <div class="col-xs-4 col-xs-offset-4"><input class="o_hr_attendance_PINbox" type="password" /></div>
                                </div>
                                <div class="row o_hr_attendance_pin_pad">
                                    <t t-foreach="['1', '2', '3', '4', '5', '6', '7', '8', '9', 'C', '0', 'ok']" t-as="btn_name">
                                        <div class="col-xs-4 o_hr_attendance_pin_pad_border">
                                            <a t-attf-class="btn btn-primary btn-block btn-lg o_hr_attendance_btn-round-corners {{ 'o_hr_attendance_pin_pad_button_' + btn_name }}"><t t-esc="btn_name"/></a>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <br/>
                    </t>
                </t>

                <div class="oe_attendance_sign_in_out">
                </div>
                <div class="o_hr_attendance_back_button btn btn-danger fa fa-times"/>
            </div>
            <div class="o_hr_attendance_clock"></div>
        </div>
    </t>



    <t t-name="VisitorGreetingMessage">
        <div class="o_hr_attendance_message_container">
            <div class="o_hr_attendance_message">
                <t t-if="widget.attendance">
                    <t t-if="widget.attendance.check_out">
                        <h1 class="o_hr_attendance_validation">
                            Checked out at <t t-esc="widget.attendance.check_out_time"/>
                        </h1>
                        <h2 class="o_hr_attendance_message_message">
                            Goodbye <t t-esc="widget.visitor_name"/>
                            <br/>
                        </h2>
                        <h3 class="o_hr_attendance_random_message"></h3>
                        <h2 class="o_hr_attendance_warning_message"></h2>

                    </t>
                    <t t-if="!widget.attendance.check_out">
                        <h1 class="o_hr_attendance_validation">
                            Checked in at <t t-esc="widget.attendance.check_in_time"/>
                        </h1>
                        <h2 class="o_hr_attendance_message_message">
                            Welcome <t t-esc="widget.visitor_name"/>
                            <br/>
                        </h2>
                        <h3 class="o_hr_attendance_random_message"></h3>
                        <h2 class="o_hr_attendance_warning_message"></h2>
                    </t>
                </t>
                <t t-if="!widget.attendance">
                    Invalid request, please return to the main menu.<br/>
                </t>
                <button class="o_hr_attendance_button_dismiss btn btn-primary btn-sm">ok</button>
            </div>
        </div>
    </t>

</templates>
